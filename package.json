{
  "name": "codingcrazy",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload --port 8000",
    "build": "npm run build --workspace=apps/web",
    "test": "npm run test:api && npm run test:web && npm run test:engine",
    "test:api": "cd apps/api && pytest",
    "test:web": "npm run test --workspace=apps/web",
    "test:engine": "npm run test --workspace=packages/engine",
    "db:migrate": "cd apps/api && alembic upgrade head",
    "db:makemigration": "cd apps/api && alembic revision --autogenerate -m",
    "db:seed": "cd apps/api && python -m app.seed",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
